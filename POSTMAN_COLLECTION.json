{
  "info": {
    "_postman_id": "hubspot-assignment-api",
    "name": "HubSpot Assignment API",
    "description": "API collection for HubSpot custom properties and contact management",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3000"
    },
    {
      "key": "contactId", 
      "value": ""
    }
  ],
  "item": [
    {
      "name": "Health Check",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/health",
          "host": ["{{baseUrl}}"],
          "path": ["health"]
        }
      }
    },
    {
      "name": "Properties",
      "item": [
        {
          "name": "Get Properties Status",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/properties",
              "host": ["{{baseUrl}}"],
              "path": ["api", "properties"]
            }
          }
        },
        {
          "name": "Setup Custom Properties",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/properties/setup",
              "host": ["{{baseUrl}}"],
              "path": ["api", "properties", "setup"]
            }
          }
        },
        {
          "name": "Create Individual Property",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"custom_field\",\n  \"label\": \"Custom Field\",\n  \"type\": \"string\",\n  \"description\": \"A custom property field\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/properties",
              "host": ["{{baseUrl}}"],
              "path": ["api", "properties"]
            }
          }
        }
      ]
    },
    {
      "name": "Contacts",
      "item": [
        {
          "name": "Create Contact",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "    const response = pm.response.json();",
                  "    if (response.success && response.data.contactId) {",
                  "        pm.environment.set('contactId', response.data.contactId);",
                  "        console.log('Contact ID saved:', response.data.contactId);",
                  "    }",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"firstName\": \"Abhisek\",\n  \"lastName\": \"Candidate\",\n  \"email\": \"abhisek@example.com\",\n  \"phone\": \"+91700999999\",\n  \"candidateExperience\": 5,\n  \"candidateDateOfJoining\": \"2024-03-15\",\n  \"candidateName\": \"Abhisek\",\n  \"candidatePastCompany\": \"Google Inc.\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/contacts",
              "host": ["{{baseUrl}}"],
              "path": ["api", "contacts"]
            }
          }
        },
        {
          "name": "Get Contact",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/contacts/{{contactId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "contacts", "{{contactId}}"]
            }
          }
        },
        {
          "name": "Update Contact",
          "request": {
            "method": "PATCH",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"candidateExperience\": 6,\n  \"candidatePastCompany\": \"Meta (Facebook)\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/contacts/{{contactId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "contacts", "{{contactId}}"]
            }
          }
        },
        {
          "name": "Search Contacts",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/contacts?candidateExperience=5",
              "host": ["{{baseUrl}}"],
              "path": ["api", "contacts"],
              "query": [
                {
                  "key": "candidateExperience",
                  "value": "5"
                }
              ]
            }
          }
        }
      ]
    }
  ]
}